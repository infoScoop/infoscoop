<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="Portallayout"
		table="IS_PORTALLAYOUTS"
	>
        <composite-id name="Id" class="PortallayoutPK">
            <key-property
                name="name"
                column="NAME"
                type="string"
            />
            <key-property
                name="Squareid"
                column="square_id"
                type="string"
                length="64"
            />
        </composite-id>

		<property
			name="Layout"
			column="LAYOUT"
			type="text"
			not-null="true"
		/>
		
		<property
            name="Advanced"
            column="ADVANCED"
            type="integer"
            not-null="true"
            length="10"
        />
		
	</class>
	<sql-query name="is_portallayouts.copySquare">
		<![CDATA[
INSERT
	INTO
		IS_PORTALLAYOUTS(
			name,
			layout,
			square_id
		)
	SELECT
		p.name,
		p.layout,
		:squareId
	FROM
		IS_PORTALLAYOUTS as p
	WHERE
		p.square_id = :defaultSquareId
		]]>
	</sql-query>
</hibernate-mapping>