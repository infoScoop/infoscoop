<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="Gadget"
		table="IS_GADGETS"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="java.lang.Long"
			column="ID"
		>
			<generator class="native">
				<param name="sequence">is_gadgets_id_seq</param>
			</generator>
		</id>
		<property
			name="Type"
			column="TYPE"
			type="string"
			length="50"
		/>
		<property
			name="Path"
			column="path"
			type="string"
			length="512"
		/>
		<property
			name="Name"
			column="name"
			type="string"
			length="255"
		/>
		
		<property
			name="Data"
			column="DATA"
			type="binary"
		/>
		
		<property
			name="Lastmodified"
			column="LASTMODIFIED"
			type="timestamp"
			not-null="false"
			length="26"
		/>

        <property
            name="Squareid"
            column="square_id"
            type="string"
            not-null="true"
            length="64"
        />

	</class>
	<query name="is_gadgets.copySquare">
		<![CDATA[
INSERT
	INTO
		Gadget(
			Type,
			Path,
			Name,
			Data,
			Lastmodified,
			Squareid
		)
	SELECT
		g.Type,
		g.Path,
		g.Name,
		g.Data,
		g.Lastmodified,
		cast(:squareId as string)
	FROM
		Gadget as g
	WHERE
		g.Squareid = :defaultSquareId
		]]>
	</query>
</hibernate-mapping>