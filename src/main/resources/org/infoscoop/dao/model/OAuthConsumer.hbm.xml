<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="OAuthConsumerProp"
		table="IS_OAUTH_CONSUMERS"
	>
		<meta attribute="sync-DAO">false</meta>
        <composite-id name="Id" class="OAuthConsumerPropPK">
            <key-property
                name="Id"
                column="ID"
                type="string"
            />
            <key-property
                name="Squareid"
                column="square_id"
                type="string"
                length="64"
            />
        </composite-id>
		<property
			name="ServiceName"
			column="service_name"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="ConsumerKey"
			column="consumer_key"
			type="string"
			not-null="false"
			length="255"
		/>
		<property
			name="ConsumerSecret"
			column="consumer_secret"
			type="string"
			not-null="false"
			length="255"
		/>
		<property
			name="SignatureMethod"
			column="signature_method"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="Description"
			column="description"
			type="string"
		/>
		<set name="OAuthGadgetUrl" lazy="true" inverse="true">  
            <key>  
                <column name="fk_oauth_id" not-null="true" />  
                <column name="square_id"/>
            </key>  
            <one-to-many class="OAuthGadgetUrl" />  
        </set>
        <set name="OAuthToken" lazy="true" inverse="true">  
            <key>  
                <column name="fk_oauth_id" not-null="true" />  
                <column name="square_id"/>
            </key>
            <one-to-many class="OAuthToken" />  
        </set>
        <set name="OAuth2Token" lazy="true" inverse="true">  
            <key>  
                <column name="fk_oauth_id" not-null="true" />  
                <column name="square_id"/>
            </key>
            <one-to-many class="OAuth2Token" />  
        </set>      
	</class>
    <sql-query name="is_oauth_consumer.copySquare">
        <![CDATA[
INSERT
    INTO
        IS_OAUTH_CONSUMERS(
            id,
            service_name,
            consumer_key,
            consumer_secret,
            signature_method,
            description,
            square_id
        )
    SELECT
        oc.id,
        oc.service_name,
        oc.consumer_key,
        oc.consumer_secret,
        oc.signature_method,
        oc.description,
        :squareId
    FROM
        IS_OAUTH_CONSUMERS as oc
    WHERE
        oc.square_id = :sourceSquareId
        ]]>
    </sql-query>
</hibernate-mapping>