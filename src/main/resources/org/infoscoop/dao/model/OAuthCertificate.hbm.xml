<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="OAuthCertificate"
		table="IS_OAUTH_CERTIFICATE"
	>
		<meta attribute="sync-DAO">false</meta>
        <composite-id name="Id" class="OAuthCertificatePK">
            <key-property
                name="ConsumerKey"
                column="consumer_key"
                type="string"
            />
            <key-property
                name="Squareid"
                column="square_id"
                type="string"
                length="64"
            />
        </composite-id>

		<property
			name="PrivateKey"
			column="private_key"
			type="string"
			not-null="false"
		/>
		<property
			name="Certificate"
			column="certificate"
			type="string"
			not-null="false"
		/>
	</class>
	<sql-query name="is_oauth_certificate.copySquare">
		<![CDATA[
INSERT
	INTO
		IS_OAUTH_CERTIFICATE(
			consumer_key,
			private_key,
			certificate,
			square_id
		)
	SELECT
		oc.consumer_key,
		"",
		"",
		:squareId
	FROM
		IS_OAUTH_CERTIFICATE as oc
	WHERE
		oc.square_id = :defaultSquareId
		]]>
	</sql-query>
    <sql-query name="is_oauth_certificate.copySquareWithKeys">
        <![CDATA[
INSERT
    INTO
        IS_OAUTH_CERTIFICATE(
            consumer_key,
            private_key,
            certificate,
            square_id
        )
    SELECT
        oc.consumer_key,
        private_key,
        certificate,
        :squareId
    FROM
        IS_OAUTH_CERTIFICATE as oc
    WHERE
        oc.square_id = :defaultSquareId
        ]]>
    </sql-query>
</hibernate-mapping>